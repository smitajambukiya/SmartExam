<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.smartexam.germanium.smartexam.custom.AutoScrollViewPager
                        android:id="@+id/pager_adv"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/ln1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/linear1"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/imageView"
                                style="@style/MyImageViewStyle"
                                android:layout_width="45dp"
                                android:src="@drawable/ic_b" />


                            <TextView
                                android:id="@+id/textView8"
                                style="@style/MyTextViewStyle"
                                android:padding="1dp"
                                android:text="@string/nav2"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/linear2"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:id="@+id/imageView3"
                                style="@style/MyImageViewStyle"
                                android:layout_width="45dp"
                                android:src="@drawable/ic_b" />


                            <TextView
                                android:id="@+id/textView3"
                                style="@style/MyTextViewStyle"
                                android:text="@string/nav3"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/linear3"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView4"
                                style="@style/MyImageViewStyle"
                                android:layout_width="45dp"
                                android:src="@drawable/ic_setting_black" />


                            <TextView
                                style="@style/MyTextViewStyle"
                                android:text="@string/nav4"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/linear4"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView5"
                                style="@style/MyImageViewStyle"
                                android:layout_width="45dp"
                                android:src="@drawable/ic_questionary" />


                            <TextView
                                style="@style/MyTextViewStyle"
                                android:text="@string/nav5"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>